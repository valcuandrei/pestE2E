{
    "name": "valcuandrei/pest-e2e",
    "description": "A Laravel-first package that runs JS-owned E2E and component tests from Pest without introducing a PHP browser DSL.",
    "keywords": [
        "php",
        "laravel",
        "pest",
        "unit",
        "test",
        "testing",
        "package"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.50",
        "symfony/process": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Collision\\": "src/Collision/",
            "ValcuAndrei\\PestE2E\\": "src/"
        },
        "files": [
            "pest-plugin.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ValcuAndrei\\PestE2E\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.3.1",
        "pestphp/pest-dev-tools": "^4.0.0",
        "pestphp/pest-plugin": "^4.0.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "audit": {
            "block-insecure": false
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "ValcuAndrei\\PestE2E\\PestE2EServiceProvider"
            ]
        }
    }
}
