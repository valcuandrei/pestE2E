{
    "name": "valcuandrei/pest-e2e",
    "description": "A Pest plugin that lets you run JS-owned E2E and component tests from Pest without introducing a PHP browser DSL.",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "pestphp/pest": "^4.3.1",
        "pestphp/pest-plugin": "^4.0.0",
        "symfony/process": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "ValcuAndrei\\PestE2E\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^4.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
